<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin10"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schoolNameTV"
                style="@style/DetailViewStyle"
                android:textSize="@dimen/font_size20" />

            <TextView
                android:id="@+id/addressTV"
                style="@style/DetailViewStyle"
                android:text="@string/address" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_weight="@dimen/weight_100"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneNumberTV"
                    style="@style/DetailViewStyle"
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/weight_50"
                    android:gravity="left"
                    android:text="@string/phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_size16" />

                <TextView
                    android:id="@+id/navigateAddressTV"
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="@dimen/weight_50"
                    android:gravity="right"
                    android:paddingRight="@dimen/margin10"
                    android:text="Navigate"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_size16" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>